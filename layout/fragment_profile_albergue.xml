<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo8">

    <android.support.v7.widget.CardView
        android:id="@+id/cv01"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#ccd9c8c8">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            app:srcCompat="@drawable/solicitudes" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="Solicitudes de Adopción"
                android:textAlignment="center"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnSolicitudAdopcion"
                android:layout_width="match_parent"
                android:layout_height="209dp"
                android:background="#00ffffff" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignTop="@+id/cv01"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="270dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#ccd9c8c8">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="360dp"
            android:layout_height="229dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/contacto" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="Contacto Post-Adopción"
                android:textAlignment="center"
                android:textSize="30dp" />
            <Button
                android:id="@+id/btnContactoPost"
                android:layout_width="match_parent"
                android:layout_height="209dp"
                android:background="#00ffffff"
                />

        </LinearLayout>




    </android.support.v7.widget.CardView>


</RelativeLayout>